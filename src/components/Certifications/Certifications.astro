<style>
  .certifications-section {
    min-height: 100vh;
    padding: 4rem 2rem;
    position: relative;
    z-index: 1;
  }

  .certifications-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .certifications-title {
    font-family: var(--font-matrix);
    font-size: clamp(2rem, 4vw, 3rem);
    color: var(--color-matrix-primary);
    margin-bottom: 1rem;
  }

  .certifications-provider {
    font-family: var(--font-terminal);
    color: var(--color-matrix-accent);
    font-size: 1.3rem;
    margin-bottom: 3rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .provider-icon {
    width: 1.5rem;
    height: 1.5rem;
    stroke: var(--color-matrix-accent);
  }

  .certifications-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .certification-item {
    background: rgba(0,0,0,0.5);
    border: 1px solid var(--color-matrix-primary);
    border-radius: 8px;
    padding: 2rem;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .certification-item:hover {
    background: rgba(57, 255, 20, 0.1);
    box-shadow: 0 0 20px rgba(57, 255, 20, 0.2);
    transform: translateY(-4px);
  }

  .certification-icon {
    width: 2.5rem;
    height: 2.5rem;
    flex-shrink: 0;
    transition: all 0.3s ease;
  }

  .certification-icon svg {
    width: 100%;
    height: 100%;
    stroke: var(--color-matrix-primary);
    opacity: 0.7;
    transition: all 0.3s ease;
  }

  .certification-item:hover .certification-icon svg {
    opacity: 1;
    stroke: var(--color-matrix-accent);
  }

  .certification-content {
    flex: 1;
  }

  .certification-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .certification-item h3 {
    font-family: var(--font-matrix);
    color: var(--color-matrix-primary);
    margin: 0;
    font-size: 1.5rem;
  }

  .certification-date {
    background: rgba(138, 43, 226, 0.2);
    border: 1px solid var(--color-matrix-accent);
    color: var(--color-matrix-accent);
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.9rem;
    white-space: nowrap;
  }

  @media (max-width: 768px) {
    .certifications-section {
      padding: 3rem 1rem;
    }

    .certification-item {
      flex-direction: column;
      align-items: flex-start;
    }

    .certification-icon {
      width: 2rem;
      height: 2rem;
    }
  }
</style>

<script>
  import { languages, defaultLang, type Language } from '../../i18n';

  function updateContent() {
    const lang = (localStorage.getItem('language') as Language) || defaultLang;
    const t = languages[lang];

    document.querySelectorAll('[data-i18n]').forEach(el => {
      const key = el.getAttribute('data-i18n');
      if (key) {
        const keys = key.split('.');
        let value: any = t;
        for (const k of keys) {
          value = value?.[k];
        }
        if (value && typeof value === 'string') {
          el.textContent = value;
        }
      }
    });
  }

  document.addEventListener('DOMContentLoaded', updateContent);
  window.addEventListener('languageChanged', updateContent);
</script>