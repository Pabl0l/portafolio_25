<style>
  .certifications {
    min-height: 50vh;
    padding: 4rem 2rem;
    position: relative;
    z-index: 1;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-title {
    font-family: var(--font-matrix);
    font-size: clamp(2rem, 4vw, 3rem);
    color: var(--color-matrix-primary);
    margin-bottom: 3rem;
  }

  .cert-grid {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .cert-link {
    text-decoration: none; /* Remove underline from link */
    color: inherit; /* Inherit color from parent */
  }

  .cert-item {
    background: rgba(0,0,0,0.5);
    border: 1px solid var(--color-matrix-primary);
    border-radius: 8px;
    padding: 2rem;
    transition: all 0.3s ease;
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    backdrop-filter: blur(10px);
  }

  .cert-item:hover {
    background: rgba(57, 255, 20, 0.1);
    box-shadow: 0 0 20px rgba(57, 255, 20, 0.2);
    transform: translateY(-4px);
  }

  .cert-icon {
    font-family: var(--font-terminal);
    font-size: 2.5rem;
    color: var(--color-matrix-primary);
    flex-shrink: 0;
    display: flex; /* Ensure container behaves nicely */
    align-items: center;
  }

  .cert-icon svg {
    width: 1em;
    height: 1em;
  }

  .cert-details {
    flex-grow: 1;
  }

  .cert-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 0.5rem;
  }

  .cert-item h3 {
    font-family: var(--font-matrix);
    color: var(--color-matrix-primary);
    margin: 0;
    font-size: 1.5rem;
  }

  .date {
    background: rgba(138, 43, 226, 0.2);
    border: 1px solid var(--color-matrix-accent);
    color: var(--color-matrix-accent);
    padding: 0.25rem 0.75rem;
    border-radius: 4px;
    font-size: 0.9rem;
    white-space: nowrap;
  }

  .institution {
    color: #fff;
    margin: 0.5rem 0;
    font-size: 1.1rem;
  }
</style>

<script>
  import { languages, defaultLang, type Language } from '../../i18n';

  function updateContent() {
    const lang = (localStorage.getItem('language') as Language) || defaultLang;
    const t = languages[lang];

    document.querySelectorAll('[data-i18n]').forEach(el => {
      const key = el.getAttribute('data-i18n');
      if (key) {
        const keys = key.split('.');
        let value: any = t;
        for (const k of keys) {
          value = value?.[k];
        }
        if (value && typeof value === 'string') {
          el.textContent = value;
          if (el.hasAttribute('data-text')) {
            el.setAttribute('data-text', value);
          }
        }
      }
    });
  }

  document.addEventListener('DOMContentLoaded', updateContent);
  window.addEventListener('languageChanged', updateContent);
</script>