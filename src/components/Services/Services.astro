---
import { Image } from 'astro:assets';
import defaultImage from '../../assets/images/señalando_derecha.png';
import bugHunterImage from '../../assets/images/cazador.png';
import mercenaryImage from '../../assets/images/mercenario.png';
import exterminatorImage from '../../assets/images/exterminador.png';
import fullstackImage from '../../assets/images/obrero.png';

const imagePaths = {
  default: bugHunterImage.src,
  bugHunter: bugHunterImage.src,
  mercenary: mercenaryImage.src,
  exterminator: exterminatorImage.src,
  fullstackWorker: fullstackImage.src,
};
---

<section class="services" id="services" data-service-images={JSON.stringify(imagePaths)}>
  <div class="container">
    <h2 class="section-title glitch-text" data-i18n="services.title" data-text="// Services">// Services</h2>
    <div class="services-content">
      <div class="service-list">
        <div class="service-item" data-image="bugHunter">
          <h3 data-i18n="services.items.bugHunter">Cazador de Errores, Bugs y Fallos de Sistema</h3>
        </div>
        <div class="service-item" data-image="mercenary">
          <h3 data-i18n="services.items.mercenary">Mercenario Especializado en Defensa Digital y Mitigación de Riesgos</h3>
        </div>
        <div class="service-item" data-image="exterminator">
          <h3 data-i18n="services.items.exterminator">Exterminador de Fallos en Redes y Sistemas Críticos</h3>
        </div>
        <div class="service-item" data-image="fullstackWorker">
          <h3 data-i18n="services.items.fullstackWorker">Obrero Fullstack para la construcción de sitios web</h3>
        </div>
      </div>
      <div class="service-image">
        <Image src={bugHunterImage} alt="Service Preview" id="service-preview-img" />
      </div>
    </div>
  </div>
</section>

<style>
  .services {
    min-height: 50vh;
    padding: 4rem 2rem;
    position: relative;
    z-index: 1;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .section-title {
    font-family: var(--font-matrix);
    font-size: clamp(2rem, 4vw, 3rem);
    color: var(--color-matrix-primary);
    margin-bottom: 3rem;
  }

  .services-content {
    display: grid;
    grid-template-columns: 70% 30%;
    gap: 2rem;
    align-items: center;
  }

  .service-list {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .service-item {
    background: rgba(0,0,0,0.5);
    border: 1px solid var(--color-matrix-primary);
    border-left: 4px solid var(--color-matrix-primary);
    border-radius: 8px;
    padding: 2rem;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    cursor: pointer;
  }

  .service-item:hover {
    background: rgba(57, 255, 20, 0.1);
    box-shadow: 0 0 20px rgba(57, 255, 20, 0.2);
    transform: translateY(-4px);
  }

  .service-item h3 {
    font-family: var(--font-matrix);
    color: var(--color-matrix-primary);
    margin: 0 0 0.5rem 0;
    font-size: 1.4rem;
    pointer-events: none; /* Prevent h3 from interfering with hover */
  }

  .service-image {
    /* Removed background, border, padding, backdrop-filter */
    transition: all 0.3s ease;
    width: 100%;
    height: 400px; /* Fixed height to prevent layout shift */
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .service-image img {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain; /* Changed to contain to ensure full image visibility without cropping */
    transition: opacity 0.3s ease;
    filter: drop-shadow(0 0 2px var(--color-matrix-primary));
  }
</style>

<script>
  import { languages, defaultLang, type Language } from '../../i18n';

  function updateContent() {
    const lang = (localStorage.getItem('language') as Language) || defaultLang;
    const t = languages[lang];

    document.querySelectorAll('[data-i18n]').forEach(el => {
      const key = el.getAttribute('data-i18n');
      if (key) {
        const keys = key.split('.');
        let value: any = t;
        for (const k of keys) {
          value = value?.[k];
        }
        if (value && typeof value === 'string') {
          el.textContent = value;
          if (el.hasAttribute('data-text')) {
            el.setAttribute('data-text', value);
          }
        }
      }
    });
  }

  document.addEventListener('DOMContentLoaded', () => {
    updateContent();
    
    const servicesSection = document.getElementById('services');
    const serviceItems = document.querySelectorAll('.service-item');
    const previewImage = document.getElementById('service-preview-img') as HTMLImageElement;

    if (servicesSection && previewImage) {
      try {
        const imagesData = servicesSection.getAttribute('data-service-images');
        if (imagesData) {
          const images = JSON.parse(imagesData);

          serviceItems.forEach(item => {
            item.addEventListener('mouseenter', () => {
              const imageKey = item.getAttribute('data-image');
              if (imageKey && images[imageKey]) {
                previewImage.src = images[imageKey];
              }
            });
          });
        }
      } catch (e) {
        console.error('Error parsing service images:', e);
      }
    }
  });

  window.addEventListener('languageChanged', updateContent);
</script>