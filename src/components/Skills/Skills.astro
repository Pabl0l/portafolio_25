<section class="skills" id="skills">
  <div class="container">
    <h2 class="section-title" data-i18n="skills.title">//Perfil  y Habilidade</h2>
    
    <div class="profile-grid">
      <div class="profile-card draggable">
        <div class="window-bar">
          <h3 data-i18n="skills.whoami">$ whoami</h3>
          <button class="window-close">×</button>
        </div>
        <p data-i18n="skills.whoamiText">Técnico en sistemas con habilidades en creación, reparación y mantenimiento de hardware y software. Experiencia práctica en desarrollo web y configuración de equipos de red (switches/routers) mediante SSH. Habilidades blandas desarrolladas como monitor académico.</p>
      </div>

      <div class="profile-card draggable">
        <div class="window-bar">
          <h3 data-i18n="skills.objective">$ cat objective.txt</h3>
          <button class="window-close">×</button>
        </div>
        <p data-i18n="skills.objectiveText">Desarrollar, mantener y dar soporte de software, red de internet o hardware para una empresa o cliente.</p>
      </div>
    </div>

    <div class="skills-grid">
      <div class="skill-category draggable">
        <div class="window-bar">
          <h3 data-i18n="skills.categories.webDev">Desarrollo Web</h3>
          <button class="window-close">×</button>
        </div>
        <p class="skill-tags">> React > JavaScript > CSS > HTML</p>
      </div>

      <div class="skill-category draggable">
        <div class="window-bar">
          <h3 data-i18n="skills.categories.programming">Programación</h3>
          <button class="window-close">×</button>
        </div>
        <p class="skill-tags">> Java > Python</p>
      </div>

      <div class="skill-category draggable">
        <div class="window-bar">
          <h3 data-i18n="skills.categories.networking">Redes</h3>
          <button class="window-close">×</button>
        </div>
        <p class="skill-tags">> Cisco (L2/L3) > IPv4/IPv6 > VLAN > DHCP > NAT</p>
      </div>

      <div class="skill-category draggable">
        <div class="window-bar">
          <h3 data-i18n="skills.categories.systems">Sistemas y Herramientas</h3>
          <button class="window-close">×</button>
        </div>
        <p class="skill-tags">> Linux > Windows > VirtualBox > Figma > Packet Tracer</p>
      </div>

      <div class="skill-category draggable">
        <div class="window-bar">
          <h3 data-i18n="skills.categories.security">Seguridad</h3>
          <button class="window-close">×</button>
        </div>
        <p class="skill-tags">> Firewalls > Vulnerability Analysis > Best Practices</p>
      </div>

      <div class="skill-category draggable">
        <div class="window-bar">
          <h3 data-i18n="skills.categories.hardware">Hardware</h3>
          <button class="window-close">×</button>
        </div>
        <p class="skill-tags">> Assembly > Repair > Diagnostics</p>
      </div>
    </div>
    <button id="reset-windows">Reset Windows</button>
  </div>
</section>

<style>
  .skills {
    min-height: 100vh;
    padding: 4rem 2rem;
    position: relative;
    z-index: 1;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative; /* Make this the positioning context */
  }

  #reset-windows {
    position: absolute;
    top: 0;
    right: 0;
    background: var(--color-matrix-accent);
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    cursor: pointer;
    font-family: var(--font-terminal);
  }

  .profile-grid, .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .profile-card, .skill-category {
    background: rgba(0,0,0,0.5);
    border: 1px solid var(--color-matrix-primary);
    border-radius: 8px;
    padding: 0;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    resize: both;
    overflow: auto;
    min-width: 200px;
    min-height: 150px;
    /* position is set by JS */
  }

  .window-bar {
    background: var(--color-matrix-primary);
    color: var(--color-matrix-bg);
    padding: 0.5rem;
    cursor: move;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top-left-radius: 7px;
    border-top-right-radius: 7px;
  }

  .window-bar h3 {
    margin: 0;
    font-size: 1rem;
    font-family: var(--font-terminal);
    color: var(--color-matrix-bg);
  }

  .window-close {
    background: red;
    color: white;
    border: none;
    border-radius: 50%;
    width: 20px;
    height: 20px;
    line-height: 20px;
    text-align: center;
    cursor: pointer;
    font-weight: bold;
  }

  .profile-card p, .skill-category p {
    color: #ddd;
    line-height: 1.6;
    margin: 1.5rem;
  }
  
  .skill-tags {
    font-family: var(--font-terminal);
  }

  @media (max-width: 768px) {
    .skills {
      padding: 3rem 1rem;
    }
  }

  .section-title {
    font-family: var(--font-matrix);
    font-size: clamp(2rem, 4vw, 3rem);
    color: var(--color-matrix-primary);
    margin-bottom: 3rem;
  }
</style>

<script>
  import { languages, defaultLang, type Language } from '../../i18n';

  function updateContent() {
    const lang = (localStorage.getItem('language') as Language) || defaultLang;
    const t = languages[lang];

    document.querySelectorAll('[data-i18n]').forEach(el => {
      const key = el.getAttribute('data-i18n');
      if (key) {
        const keys = key.split('.');
        let value: any = t;
        for (const k of keys) {
          value = value?.[k];
        }
        if (value && typeof value === 'string') {
          el.textContent = value;
        }
      }
    });
  }

  document.addEventListener('DOMContentLoaded', updateContent);
  window.addEventListener('languageChanged', updateContent);

  document.addEventListener('DOMContentLoaded', () => {
    setTimeout(() => {
      const draggableElements = document.querySelectorAll('.draggable');
      const resetBtn = document.getElementById('reset-windows');

      // Store initial state
      draggableElements.forEach(el => {
        const rect = el.getBoundingClientRect();
        el.dataset.initialLeft = el.offsetLeft + 'px';
        el.dataset.initialTop = el.offsetTop + 'px';
        el.dataset.initialWidth = el.offsetWidth + 'px';
        el.dataset.initialHeight = el.offsetHeight + 'px';
      });

      // Apply initial state as absolute
      draggableElements.forEach(el => {
        el.style.left = el.dataset.initialLeft;
        el.style.top = el.dataset.initialTop;
        el.style.width = el.dataset.initialWidth;
        el.style.height = el.dataset.initialHeight;
        el.style.position = 'absolute';
      });
      
      interact('.draggable')
        .draggable({
          inertia: true,
          modifiers: [
            interact.modifiers.restrictRect({
              restriction: 'parent',
              endOnly: true
            })
          ],
          autoScroll: true,
          listeners: {
            move: dragMoveListener,
          }
        })
        .resizable({
          edges: { left: true, right: true, bottom: true, top: true },
          listeners: {
            move (event) {
              let { x, y } = event.target.dataset

              x = (parseFloat(x) || 0) + event.deltaRect.left
              y = (parseFloat(y) || 0) + event.deltaRect.top

              Object.assign(event.target.style, {
                width: event.rect.width + 'px',
                height: event.rect.height + 'px',
                transform: `translate(${x}px, ${y}px)`
              })

              Object.assign(event.target.dataset, { x, y })
            }
          },
          inertia: true
        })

      function dragMoveListener (event) {
        const target = event.target
        const x = (parseFloat(target.getAttribute('data-x')) || 0) + event.dx
        const y = (parseFloat(target.getAttribute('data-y')) || 0) + event.dy

        target.style.transform = `translate(${x}px, ${y}px)`

        target.setAttribute('data-x', x)
        target.setAttribute('data-y', y)
      }

      // Close buttons
      document.querySelectorAll('.window-close').forEach(btn => {
        btn.addEventListener('click', (e) => {
          e.target.closest('.draggable').style.display = 'none';
        });
      });

      // Reset button
      resetBtn.addEventListener('click', () => {
        draggableElements.forEach(el => {
          el.style.display = 'block';
          el.style.left = el.dataset.initialLeft;
          el.style.top = el.dataset.initialTop;
          el.style.width = el.dataset.initialWidth;
          el.style.height = el.dataset.initialHeight;
          el.style.transform = 'translate(0px, 0px)';
          el.setAttribute('data-x', 0);
          el.setAttribute('data-y', 0);
        });
      });
    }, 100); // 100ms delay to allow rendering
  });
</script>